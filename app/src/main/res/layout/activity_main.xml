<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/light"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvdisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            android:textColor="@color/orange"
            android:textSize="25sp"
            android:text="Your weight is :"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            android:text=""
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvdisplay"
            android:visibility="invisible"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tvunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvdisplay"
            android:layout_toRightOf="@+id/tvstatus"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="(Lbs)"
            android:visibility="invisible"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/tvmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvunit"
            android:textColor="@color/orange"
            android:textSize="25sp"
            android:text=""
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>



    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:fontFamily="sans-serif-medium"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="290dp"/>
    <EditText
        android:id="@+id/etHeight"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvHeight"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient"
        android:hint="0"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/gradient"
        android:layout_below="@+id/tvHeight"
        android:padding="10dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:text="  inch"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/rule"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_below="@+id/etHeight"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvWeight"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient"
        android:hint="0"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/gradient"
        android:layout_below="@+id/tvWeight"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="220dp"
        android:text="  Pounds"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/weight"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/resetButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Reset"
        android:inputType="text"
        android:textColor="@color/orange"
        android:layout_below="@+id/etWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"/>




</RelativeLayout>